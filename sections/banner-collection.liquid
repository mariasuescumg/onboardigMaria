<div class="dj-banner">
  <div class=" dj-bg">
    <img src="{{ section.settings.image_banner_bfriday | image_url: width: 1500 }}" alt="">
  </div>
  <div class="dj-text">
    <h1>{{ section.settings.title_banner_bfriday }}</h1>
  </div>
</div>


{%- style -%}
  .dj-banner {
    margin: 30px 0;
    width: 100vw;
    height: 50vh;
    position: relative;
  }
  .dj-banner .dj-bg {
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    width: 100%;
  }
  .dj-bg img {
    width: 100%;
    height: 50vh;
    margin: 20px auto;
    padding: 20px 0;

  }
  .dj-text {
    justify-content: center;
    padding-bottom: 20px;
    width: 100%
  }
  .dj-text h1 {
    top: 40%;
    left: 40%;
    font-size: 50px;
    font-weight: bold;
    position: absolute;
  }
{%- endstyle -%}


{% schema %}
  {
    "name": "banner-bfriday",
    "settings": [
      {
        "type": "text",
        "id": "title_banner_bfriday",
        "label": "Title"
      }, {
        "type": "image_picker",
        "id": "image_banner_bfriday",
        "label": "Image"
      }
    ]

  }
{% endschema %}